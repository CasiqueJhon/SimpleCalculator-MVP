<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.LinearLayout"
    tools:orientation="vertical"
    tools:gravity="center_vertical">

    <TextView
        android:id="@+id/calculator_input_equation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:maxLines="3"
        android:textSize="@dimen/calculator_equation"
        android:layout_gravity="end"
        android:padding="16dp"
        tools:text="@string/calculator_input_result" />

    <TextView
        android:id="@+id/calculator_input_outcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:maxLines="1"
        android:textSize="@dimen/text_input_outcome"
        android:layout_gravity="end"
        android:padding="16dp"
        android:textColor="@color/colorTextLight"
        tools:text="@string/calculator_input_outcome" />

</merge>